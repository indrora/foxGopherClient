<Window x:Class="foxGopherClient.filedownloadwindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Download" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Width="476" Height="171">
    <StackPanel>
        <Label>Download file from selector</Label>
        <Label>xxx</Label>
        <Label>xxx KBytes downloaded (xxx KB/s)</Label>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" TextBlock.TextAlignment="Right"> Commands:</Label>
            <Button Grid.Column="1">Cancel</Button>
            <Button Grid.Column="2">Close</Button>
            <Button Grid.Column="3">Open</Button>
            <Button Grid.Column="4">Save (Move)</Button>
            <Label Grid.Column="5"></Label>
        </Grid>
        <AdornerDecorator>
            <Label>Download Location: xxxx</Label>
        </AdornerDecorator>
        
    </StackPanel>
</Window>
